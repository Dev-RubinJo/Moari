# platform :ios, '9.0'

target 'Moari' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!
  
  # Pods for Moari
  pod 'Alamofire'
  pod 'AlamofireNetworkActivityIndicator'
