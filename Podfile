  pod 'RealmSwift'
  
  # Drawer View Controller
  pod 'KWDrawerController', '~> 4.2'
  # Star Rating Library
  pod 'Cosmos', '~> 21.0'
  
  pod 'Firebase/Analytics'
  pod 'Firebase/Crashlytics'
  pod 'FirebaseStorage'

  target 'MoariTests' do
    inherit! :search_paths
    # Pods for testing
  end

end
